<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frame"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/text_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yomogi_regular"
            android:gravity="start"
            android:text="12"
            android:maxLength="8"
            android:textColor="@color/font_color"
            android:textSize="@dimen/giant" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_digit_a"
            style="@style/charSquareButton"
            android:onClick="onClickNumber"
            android:text="A" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_b"
            style="@style/charSquareButton"
            android:onClick="onClickNumber"
            android:text="B" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_c"
            style="@style/charSquareButton"
            android:onClick="onClickNumber"
            android:text="C" />

        <View
            android:layout_width="64dp"
            android:layout_height="0dp"
            android:layout_weight="1" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_digit_siven"
            style="@style/numberButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="7" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_eight"
            style="@style/numberButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="8" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_nine"
            style="@style/numberButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="9" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_d"
            style="@style/charButton"
            android:onClick="onClickNumber"
            android:text="D" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_digit_four"
            style="@style/numberButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="4" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_five"
            style="@style/numberButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="5" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_six"
            style="@style/numberButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="6" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            style="@style/charButton"
            android:onClick="onClickNumber"
            android:text="E" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_digit_one"
            style="@style/numberButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_two"
            style="@style/numberButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_three"
            style="@style/numberButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="3" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_f"
            style="@style/charButton"
            android:onClick="onClickNumber"
            android:text="F" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button_digit_zero"
            style="@style/largeButton"
            android:onClick="onClickNumber"
            android:background="@drawable/squre_button"
            android:text="0" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/button_digit_float_point"
            style="@style/floatButton"
            android:background="@drawable/squre_button"
            android:text="."
            android:onClick="onClickNumber"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_digit_delete"
            style="@style/equalButton"
            android:onClick="clear"
            android:layout_gravity="center"
            android:text="del" />


    </LinearLayout>


</LinearLayout>