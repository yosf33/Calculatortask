<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorTask" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/frame</item>
        <item name="colorPrimaryVariant">@color/frame</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/frame</item>
        <!-- Customize your theme here. -->
    </style>

<!--    button-->
    <style name="calcButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="normalButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:fontFamily">@font/yomogi_regular</item>
        <item name="android:textSize">@dimen/fontMediam</item>
    </style>

    <style name="numberButton" parent="normalButton">
        <item name="android:background">@drawable/squre_button</item>
    </style>

    <style name="charButton" parent="normalButton">
        <item name="android:background">@drawable/circle_button</item>
    </style>

    <style name="equalButton" parent="normalButton">
        <item name="android:background">@drawable/equal_button</item>

    </style>


</resources>